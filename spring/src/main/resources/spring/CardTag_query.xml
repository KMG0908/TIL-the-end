<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.ssafy.project.dao.CardTagDao" >
   	
   	<insert id="insertCardTag" 
   		parameterType="cardtag" 
		useGeneratedKeys="true"
		keyProperty="card_tag_id">
   		insert into card_tag(card_id, tag_id)
   		values(#{card_id}, #{tag_id})
   	</insert>
   	
   	<select id="searchAll" parameterType = "int" resultType="cardtag">
  		select * from card_tag where card_id = #{card_id}
  	</select>
  	  		
  	<delete id="deleteCardTag" parameterType="int">
		delete
		from card_tag
		where cardtag_id = #{cardtag_id}
	</delete>
  	
</mapper>