<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.project.dao.Card_TagDao">

	<insert id="insertCard_Tag" parameterType="card_tag"
		useGeneratedKeys="true" keyProperty="card_tag_id">
		insert into card_tag(card_id, tag_id)
		values(#{card_id}, #{tag_id})
	</insert>

	<select id="searchAll" parameterType="int" resultType="card_tag">
		select * from card_tag where card_id = #{card_id}
	</select>

	<delete id="deleteCard_Tag" parameterType="int">
		delete
		from card_tag
		where card_tag_id = #{card_tag_id}
	</delete>
	
	<select id="getMaxCardTagId" resultType = "int">
		select max(card_tag_id)
		from card_tag
	</select>

</mapper>